{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["./app/*"],
      "@ui/*": ["./app/ui/*"],
      "@comp/*": ["./app/ui/components/*"],
      "@styles/*": ["./app/ui/styles/*"],
      "@lib/*": ["./app/lib/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "./app",
    "./dist/types/**/*.ts",
    "./next-env.d.ts",
    ".next/types/**/*.ts"
, "src/ui", "src/App.tsx", "src/page.tsx", "src/lib"  ],
  "exclude": [
    "./node_modules"
  ]
}
